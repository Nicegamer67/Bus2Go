<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark"
    >
    <include android:id="@+id/settingsAppBar"
        layout="@layout/action_bar"/>
    <LinearLayout
        android:id="@+id/settingsChoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="90dp"
        >
        <!-- Add image next to each for better -->
        <TextView
            android:id="@+id/language_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light"
            android:text="@string/language"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="onClickLanguage"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:id="@+id/sep_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/list_elem_separator"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light"
                android:text="@string/theme"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-medium"
                android:onClick="onClickTheme"
                android:paddingVertical="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/theme_switch"
                    android:onClick="onClickTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark"
                    android:textSize="20sp"
                    android:textColor="@color/light"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    />
        </RelativeLayout>
            <View
                android:id="@+id/sep_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/list_elem_separator"
                />
            <TextView
                android:id="@+id/rand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light"
                android:text="random"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-medium"
                android:paddingVertical="5dp"
                app:layout_constraintTop_toBottomOf="@id/theme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>