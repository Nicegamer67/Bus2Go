<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeElem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginVertical="5dp"
    >

    <!-- TODO FOR NICER UI ADD SEPARATIONS FOR EACH TEXT VIEW (line above and below, light grey) -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/stop"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:gravity="center_vertical|end"
        android:padding="2dp"
        android:text="STOP"
        android:textAlignment="textEnd"
        android:textColor="@color/basic_blue"
        android:textSize="23sp"
        android:fontFamily="@font/goli_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/favourite_star_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="isFavourite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/stop"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>